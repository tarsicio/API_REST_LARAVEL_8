        }
    },
    "paths": {
        "/api/v1/register": {
            "post": {
                "tags": [
                    "Register_user"
                ],
                "summary": "registrar un nuevo usuario",
                "description": "Registrar con email y password",
                "operationId": "27f1a6984bd75e6200230b4c21fc7577",
                "requestBody": {
                    "description": "Credenciales del usuario",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "username",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "Tarsicio Carrizales"
                                    },
                                    "username": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "tarsicio"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "telecom.com.ve@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456789"
                                    },
                                    "terms": {
                                        "type": "boolean",
                                        "example": "true"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Hubo un error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Consulte a su Administrador"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/confirm/{confirmation_code}": {
            "post": {
                "tags": [
                    "Confirm_Register_user"
                ],
                "summary": "Confirmar el registro",
                "description": "Confirma el registro a trav√©s del correo enviado",
                "operationId": "f3b851d3fb04d38eac60b9de92c95e89",
                "requestBody": {
                    "description": "Credenciales del usuario",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "confirmation_code"
                                ],
                                "properties": {
                                    "confirmation_code": {
                                        "type": "string",
                                        "format": "text",
                                        "example": "OlXThKTk22RP4tPD4Y19RuEUq"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Hubo un error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Consulte a su Administrador"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}